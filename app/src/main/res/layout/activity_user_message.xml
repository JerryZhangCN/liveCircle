<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    >

    <include layout="@layout/public_top_bar"></include>

    <RelativeLayout
        android:id="@+id/change_user_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hint_7x"
        android:layout_marginTop="@dimen/hint_2.5x"
        android:background="@color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_pic"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_8px"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/chose_user_pic"
            android:layout_width="@dimen/hint_5x"
            android:layout_height="@dimen/hint_5x"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hint_2x"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:id="@+id/turn_change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hint_3x"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/user_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_8px"
                />
            <EditText
                android:id="@+id/user_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hint_3x"
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:text="@string/user_name"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_8px"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:maxEms="15"
                android:ellipsize="end"
               android:layout_alignParentRight="true"
                android:paddingRight="@dimen/hint_0.5x"
                />
        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hint_2x"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hint_3x"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_8px"
                />
            <EditText
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hint_3x"
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_8px"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:maxEms="15"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/hint_0.5x"
                />
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/hint_2x"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hint_3x"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:text="@string/brithday"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_8px"
                />
            <TextView
                android:id="@+id/user_brith"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/hint_3x"
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:text="@string/brithday"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_8px"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:maxEms="15"
                android:ellipsize="end"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/hint_0.5x"
                />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
