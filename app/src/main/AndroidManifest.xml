    <application
        android:name=".app.AppApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".home.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.MainActivity" />
        <activity android:name=".home.LoginActivity" />
        <activity android:name=".home.RegisterActivity" />
        <activity android:name=".home.ResourceActivity" />
        <activity android:name=".home.OrderActivity" />
        <activity android:name=".home.ShellActivity" />
        <activity android:name=".home.SetupActivity" />
        <activity android:name=".home.IssueActivity" />
        <activity android:name=".home.NoticeCommentActivity" />
        <activity android:name=".home.UserMessageActivity" />
        <activity android:name=".home.CreateResourceActivity" />
        <activity android:name=".home.CollectionActivity"></activity>
    </application>

</manifest>